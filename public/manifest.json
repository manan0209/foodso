{
  "manifest_version": 3,
  "name": "foodso",
  "version": "1.0.0",
  "description": "Replace fast food temptations with healthy home recipes",
  "permissions": [
    "storage",
    "activeTab",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "HealthySwap"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "images/icon-16.svg",
    "48": "images/icon-48.svg",
    "128": "images/icon-128.svg"
  }
}
